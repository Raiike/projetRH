{% extends "base.twig" %}

{% block style %}
    <link rel="stylesheet" href="/assets/css/addEmployee.css">
{% endblock %}

{% block main %}
<div class="content">
    <div class="signup-container">
        <h1>Ajouter un Employé</h1>
        <form method="POST" enctype="multipart/form-data" action="/addEmployee">
            <div class="form-group">
                <label for="nom">Nom:</label>
                <input type="text" id="nom" name="name" required>
            </div>

            <div class="form-group">
                <label for="fonction">Fonction:</label>
                <input type="text" id="fonction" name="fonction" required>
            </div>

            <div class="form-group">
                <label for="blameCount">Nombre de Blâmes:</label>
                <input type="number" id="blameCount" name="blameCount" required>
            </div>
            
            <div class="form-group">
                <label for="photo">Photo:</label>
                <input type="file" id="photo" name="img" accept="image/*">
            </div>

            <button type="submit">Enregistrer</button>
            <a href="/dashboard" class="cancel-button">Annuler</a>
        </form>
    </div>
</div>
{% endblock %}
